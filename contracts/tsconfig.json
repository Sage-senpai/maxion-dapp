{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./hardhat.config.ts"
, "test-rpc.ts", "contracts/scripts/generate-fresh-wallet.js", "contracts/scripts/deploy-remaining-strategies.ts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ],
  "files": [
    "./hardhat.config.cjs"
  ]
}