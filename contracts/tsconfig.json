{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.cjs",
    "./scripts/**/*",
    "./test/**/*",
    "./ignition/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}